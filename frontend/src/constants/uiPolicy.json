{
    "policyId": "kavachin-security-state-orchestration",
    "version": "1.0.0",
    "states": {
    "normal": {
      "components": [
        { "component": "StatusHeader", "initialProps": { "title": "SecureHome Protocol Active", "severity": "low" } },
        { "component": "DeviceInventory", "initialProps": { "filter": "all" } },
        { "component": "TelemetryOscilloscope", "initialProps": { "title": "Live Traffic Analysis" } }
      ]
    },
    "anomaly": {
      "components": [
        { "component": "StatusHeader", "initialProps": { "title": "Anomaly Detected", "severity": "medium" } },
        { "component": "DeviceInventory", "initialProps": { "filter": "flagged" } },
        { "component": "IncidentDesk" }
      ]
    },
      "validated": {
        "components": [
          { "component": "StatusHeader", "initialProps": { "mode": "validated", "severity": "high" } },
          { "component": "TelemetryOscilloscope" },
          { "component": "IncidentDesk" },
          { "component": "ActionControls", "initialProps": { "canLockdown": true } }
        ]
      }
    }
  }